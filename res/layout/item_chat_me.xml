<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:padding="@dimen/msgPadding" >

    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="@dimen/msgAvatarSize"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher" />

    <com.snake.vchat.component.TextViewVertical
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/msgAvatarSize"
        android:layout_above="@id/iv_avatar"
        android:layout_alignLeft="@id/iv_avatar"
        android:layout_alignRight="@id/iv_avatar" />


</RelativeLayout>